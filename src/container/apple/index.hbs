<div class='page'>
  <div class='header'>

    {{#with header}}
      <header class='header__content'>
        <div class='header__block'>
          <img src='/svg/apple.svg' alt='Apple' class='header__icon'/>

          <nav class='header__block'>
            {{#each links}}
              <a href='{{url}}' class='header__link'>{{text}}</a>
            {{/each}}
          </nav>
        </div>
        <div class='header__block'>
          <img src='/svg/search.svg' alt='search' class='header__icon'/>
          <img src='/svg/bag.svg' alt='bag' class='header__icon'/>
        </div>
      </header>
      
    {{/with}}
  </div>
  {{#with header.ad}}
      <div class="ad">
        <div class="header__content ad__content">
          <div class="header__block">
              <div class="ad__text">{{title}}</div></div>
              <div class="header__block">
              <div class="ad__action">
                <a href="{{link.url}}" class="ad__link">{{link.text}}</a>
                <img src='/svg/arrow.svg' alt='arrow' class='header__icon'/>
              </div>
              </div>
        </div>
      </div>
  {{/with}}


  {{#with iphone_pro}}
